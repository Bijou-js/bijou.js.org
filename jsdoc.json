{
  "source": {
    "include": ["./bijou"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|out/|.github/)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "theme": "light",
      "create_style": "pre, pre * {font-family: monospace !important;} .tooltip * {color: black !important}",
      "add_scripts": "window.addEventListener('load', () => document.querySelector('.accordion').classList.remove('collapsed'))",
      "menu": [
        {
          "title": "Home",
          "link": "https://bijou.js.org"
        },
        {
          "title": "Github",
          "link": "https://github.com/bijou-js/bijou.js",
          "target": "_blank"
        },
        {
          "title": "Functions in Bijou",
          "link": "https://bijou.js.org/docs/bijou.html"
        }
      ],
      "meta": [
        {
          "name": "author",
          "content": "Explosion-Scratch"
        },
        {
          "name": "description",
          "content": "Bijou.js - Useful JS snippets, in one simple library"
        }
      ]
    }
  }
}
